
    <%- include('includes/head'); %>
    <%- include('includes/nav'); %>
    
    
    <div class="container">

        <div class="row">
            <div class="col-lg-2"></div>

            <div class="col-lg-8 my-5">
                <h1 class="text-center">Criar conta ou fazer Login</h1>
                <p class="text-center lead">Faça login ou crie sua conta abaixo.</p>

                <%- include('includes/messages'); %>

                <div class="row">
                    <div class="col-lg my-5">
                        <h4>Faça seu cadastro</h4>
                        <p>Se você ainda não tem conta, preencha o formulário abaixo</p>
                        <form class="form-cadastro" action="/login/register" method="POST">
                            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                            <div class="form-group">
                              <label >Seu email</label>
                              <input type="email" class="form-control" name="email">
                              <p class="email" style="color: red; font-family:  system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif"></p>
                            </div>
                            <div class="form-group">
                                <label >Sua Senha</label>
                                <input type="password" class="form-control" name="password">
                                <p class="senha" style="color: red; font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif"></p>
                              </div>
    
                            <button type="submit" class="btn btn-primary my-3">Criar conta</button>
                          </form>

                    </div>


                    <div class="col-lg">
                        <h4>Faça seu Login</h4>
                        <p>Se você já tem conta, faça seu login</p>
                        <form class="form-login" action="/login/login" method="POST">
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                           
                            <div class="form-group">
                              <label >Seu email</label>
                              <input type="email" class="form-control" name="email">
                              <p class="email" style="color: red;"></p>
                            </div>

                            <div class="form-group">
                                <label >Sua Senha</label>
                                <input type="password" class="form-control" name="password">
                                <p class="senha" style="color: red;"></p>
                              </div>
    
                            <button type="submit" class="btn btn-primary my-3">Entrar</button>
                          </form>

                    </div>
                </div>
                
            </div>
        </div>

            <div class="col-lg-2"></div>

    </div>
    
    <%- include('includes/footer'); %>

    